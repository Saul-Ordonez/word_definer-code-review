<h1>Update <%= @word.word_name() %></h1>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="word_name">Edit Word:</label>
  <input id="word_name" name="word_name" type="text">

  <label for="definition">Edit Definition:</label>
  <input id="definition" name="definition" type="text">

  <button type="submit">Update</button>
</form>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete word</button>
</form>

<p><a href="/words">Return to word list</a></p>
